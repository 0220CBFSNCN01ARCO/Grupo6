<html lang="en">

<%- include('./partials/head.ejs')%>
<title>CATALOGO</title>
<body class="fondo">
    <!--barra de navegacion-->
    <%- include('./partials/header.ejs')%>
    <!--carrousel-->
    <div class="carousel slide mt-4" data-ride="carousel">

        <div class="carousel-inner" style="height: auto;">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/images/home/imagen-venta.png" alt="Tienda">
                <div class="carousel-caption d-none d-sm-inline">
                    <h3>Tienda</h3>
                    <p>Encontra todo lo que necesitas!!!</p>
                </div>
            </div>
        </div>
    </div>

    <!--PRINCIPAL-->

    <div class="container">
        <main class="main">
            <!--Titulo y servicios-->
            <div class="container mt-4 text-center">
                <h1> Nuestra tienda</h1>

                <!--FILTROS-->
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        <a class="navbar-brand" href="#">Filtrar por: </a>
                        <button class="navbar-toggler ml-auto collapsed" type="button" data-toggle="collapse" data-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                                        aria-haspopup="true" aria-expanded="false">
                                        MARCA
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" href="#">Samsung</a>
                                        <a class="dropdown-item" href="#">iphone</a>
                                        <a class="dropdown-item" href="#">otro</a>
                                    </div>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                                        aria-haspopup="true" aria-expanded="false">
                                        TIPOS DE CAMARA
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" href="#">1</a>
                                        <a class="dropdown-item" href="#">2</a>
                                        <a class="dropdown-item" href="#">3</a>
                                    </div>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                                        aria-haspopup="true" aria-expanded="false">
                                        TAMAÑO DE PANTALLA
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" href="#">1</a>
                                        <a class="dropdown-item" href="#">2</a>
                                        <a class="dropdown-item" href="#">3</a>
                                    </div>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                                        aria-haspopup="true" aria-expanded="false">
                                        TAMAÑO DE PANTALLA
                                    </a>
                                    <div class="dropdown-menu ml-auto" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" href="#">1</a>
                                        <a class="dropdown-item" href="#">2</a>
                                        <a class="dropdown-item" href="#">3</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </nav>

                <!--TODOS LOS PRODUCTOS-->
                <p style="text-align:initial;">Todos Los Productos</p>
                <div class="row">

                    <% arrayProductos.forEach(producto => { %>
                     
                        <div class="col-12 col-md-6 col-lg-3 mb-4 mt-4">
                        
                            <figure class="cuadroProducto">
                                <img class="imgProducto" src="/images/product/<%= producto.imagen %>" alt="">
                            </figure>
                            <section>
                                <div class="cuadroProducto">
                                    <h4><%= producto.nombre %> </h4>
                                    <p><%= producto.precio %></p>
                                    <p>O podes pagar en 18 cuotas de</p>
                                    <p><%= producto.precio %></p>
                                </div>
                            </section>
                        
                        
                        </div>

                    <% }) %>
                    
                </div>


            </div>





            <!--esta parte es la de imagenes de seguimiento tarjeta y otras-->

            <div class="container text-center mt-4 mb-4">


                <div class="row">
                    <div class="col-md-4 mb-4">
                        <b>
                            <p>Trabajos con Mercado Pago</p>
                        </b>
                        <img src="/images/home/iconos/payment.svg" class="img-fluid" alt="">
                    </div>
                    <div class="col-md-4 mb-4">
                        <b>
                            <p>Envíos Gratis desde $2.500</p>
                        </b>
                        <img src="/images/home/iconos/shipping.svg" class="img-fluid" alt="">
                    </div>
                    <div class="col-md-4 mb-4">
                        <b>
                            <p>Sitio Seguro</p>
                        </b>
                        <img src="/images/home/iconos/protected.svg" class="img-fluid" alt="">
                    </div>
                </div>
            </div>

        </main>
    </div>
    <!--footer-->

    <%- include('./partials/footer.ejs')%>

    <%- include('./partials/scripts.ejs')%>


</body>

</html>